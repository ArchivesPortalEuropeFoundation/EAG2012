        </xs:attribute>
        <xs:attributeGroup ref="link"/>
        <!-- Added -->
        <xs:attributeGroup ref="vocabulary"/>
        <xs:attributeGroup ref="references"/>
        <xs:attribute name="lastDateTimeVerified" type="m.data.standardDateTime"/>
        <!-- Added -->
        <xs:attributeGroup ref="common"/>
    </xs:complexType>

