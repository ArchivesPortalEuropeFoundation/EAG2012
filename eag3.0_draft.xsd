    <xs:complexType name="relationType" mixed="true">
        <xs:attribute name="localType" type="xs:anyURI"/>
        <xs:attribute name="localTypeDeclarationReference" type="xs:IDREF"/>
        <xs:attributeGroup ref="common"/>
